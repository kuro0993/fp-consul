<div class="flex justify-between items-center">
  <h1>マイページ</h1>
  <%= link_to '相談予約', appoints_path, class: "ml-2 rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium text-white" %>
</div>
<div class="mt-12 mx-auto w-3/4">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
  </div>

  <h2>相談予約一覧</h2>
  <table class="divide-y divide-gray-300 w-full border-b border-gray-200 shadow table-fixed w-full">
    <thead class="bg-gray-50">
      <tr class="whitespace-nowrap">
        <th class="w-2/12 px-2 py-2 text-xs text-gray-500 text-center"></th>
        <th class="w-4/12 px-6 py-2 text-xs text-gray-500 text-center">予約日時</th>
        <th class="w-4/12 px-6 py-2 text-xs text-gray-500 text-center">フィナンシャルプランナー</th>
        <th class="w-2/12 px-6 py-2 text-xs text-gray-500 text-center"></th>
      </tr>
    </thead>

    <tbody class="bg-white divide-y divide-gray-300">
    <% @appoints.each_with_index do |a, i| %>
      <tr>
        <td class="w-16 px-2 py-2 text-xs text-gray-500 text-center">予約 <%= i + 1 %></td>
        <td class="px-6 py-2 text-xs text-gray-500 text-center">
          <span class=""><%= a.start_datetime.strftime("%Y/%m/%d") %></span>
          <span class="ml-1"><%= a.start_datetime.strftime("%H:%M") %> 〜 <%= a.end_datetime.strftime("%H:%M") %></span>
        </td>
        <td class="px-6 py-2 text-xs text-gray-500 text-center"><%= a.staff.full_name %></td>
        <td class="px-6 py-2 text-xs text-gray-500 text-center flex">
          <%= link_to '詳細', appoint_path(a), class: "flex-1 rounded-lg py-2 px-2 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
